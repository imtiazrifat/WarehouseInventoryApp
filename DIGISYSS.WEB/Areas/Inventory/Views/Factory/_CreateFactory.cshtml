<script src="~/Areas/Inventory/Scripts/Factory/CreateFactory.js"></script>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">APT ERP</h4>
            </div>
            <div id="modal-body">
                <h2 id="rif"></h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
    <header>
        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
        <h2>Create Factory </h2>

    </header>

    <!-- widget div-->
    <div>

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->

        </div>
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body no-padding">

            <div class="smart-form">
               <fieldset>
                    <input type="text" id="hdnFactoryId" hidden="" value="0" />
                   

                    <section>
                        <label for="txtFactoryName" class="label">Factory Name</label>
                        <label class="input">
                            <input type="text" id="txtFactoryName" name="txtFactoryName" maxlength="50" placeholder="Factory Name" />
                        </label>
                    </section>
                    <section>
                        <label for="txtFactoryCode" class="label">Factory Code</label>
                        <label class="input">
                            <input type="text" id="txtFactoryCode" name="txtFactoryCode" maxlength="50" placeholder="Factory Code" required/>
                        </label>
                    </section>
                    <section>
                        <label for="txtFactoryNumber" class="label">Factory Number</label>
                        <label class="input">
                            <input type="text" id="txtFactoryNumber" name="txtFactoryNumber" maxlength="50" placeholder="Factory Number" required />
                        </label>
                    </section>
                    <section>
                        <label for="txtFactoryDetails" class="label">Factory Details</label>
                        <label class="input">
                            <input type="text" id="txtFactoryDetails" name="txtFactoryDetails" maxlength="350" placeholder="Factory Details" />
                        </label>
                    </section>

                    <section>
                        <label class="checkbox">
                            <input type="checkbox" name="chkIsActive" id="chkIsActive">
                            <i></i>IsActive
                        </label>
                    </section>
                </fieldset>



                <footer>
                    <button class="btn btn-primary" id="btnSaveFactory">
                        @*onclick="createAssetCategoryManager.SaveAssetCategory()"*@
                        Save
                    </button>
                    <button type="button" class="btn btn-warning" id="btnClearFactoryForm">
                        Clear
                    </button>
                </footer>
            </div>

        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->

</div>
<!-- end widget -->


<div id="dialog_simple" title="APT ERP V 1.0.0">
