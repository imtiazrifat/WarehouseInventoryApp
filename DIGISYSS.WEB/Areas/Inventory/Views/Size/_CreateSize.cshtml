<script src="~/Areas/Inventory/Scripts/Size/CreateSize.js"></script>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">APT ERP</h4>
            </div>
            <div id="modal-body">
                <h2 id="rif"></h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
    <header>
        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
        <h2>Create Size </h2>

    </header>

    <!-- widget div-->
    <div>

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->

        </div>
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body no-padding">

            <div class="smart-form">
               <fieldset>
                    <input type="text" id="hdnSizeId" hidden="" value="0" />
                    <section>
                        <label for="txtSizeCode" class="label">Size Code</label>
                        <label class="input">
                            <input type="text" id="txtSizeCode" name="txtSizeCode" maxlength="50" placeholder="Size Code" required />
                        </label>
                    </section>

                    <section>
                        <label for="txtSizeName" class="label">Size Name</label>
                        <label class="input">
                            <input type="text" id="txtSizeName" name="txtSizeName" maxlength="50" placeholder="Size Name" />
                        </label>
                    </section>

                    <section>
                        <label for="txtSizeDetails" class="label">Size Details</label>
                        <label class="input">
                            <input type="text" id="txtSizeDetails" name="txtSizeDetails" maxlength="350" placeholder="Size Details" />
                        </label>
                    </section>
                    <section>
                        <label class="checkbox">
                            <input type="checkbox" name="chkIsActive" id="chkIsActive">
                            <i></i>IsActive
                        </label>
                    </section>
                </fieldset>



                <footer>
                    <button class="btn btn-primary" id="btnSaveSize">
                        @*onclick="createAssetCategoryManager.SaveAssetCategory()"*@
                        Save
                    </button>
                    <button type="button" class="btn btn-warning" id="btnClearSizeForm">
                        Clear
                    </button>
                </footer>
            </div>

        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->

</div>
<!-- end widget -->


