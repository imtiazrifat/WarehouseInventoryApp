                                </section>
                                <section>
                                    <label for="txtOfficeAddress1" class="label">Office Address 1</label>
                                    <label class="input">
                                        <input type="text" id="txtOfficeAddress1" name="txtOfficeAddress1" maxlength="350" placeholder="Office Address 1"/>
                                    </label>
                                </section>
                                <section>
                                    <label for="txtOfficeAddress2" class="label">Office Address 2</label>
                                    <label class="input">
                                        <input type="text" id="txtOfficeAddress2" name="txtOfficeAddress2" maxlength="350" placeholder="Office Address 2" />
                                    </label>
                                </section>
                               
                            </div>


                            <div class="col-xs-1"></div>


                            <div class="col-lg-3 col-md-3 col-sm-5 col-xs-12">


                                <section>
                                    <label for="txtOfficeCityId" class="label">Office City Id</label>
                                    <label class="input">
                                        <input type="text" id="txtOfficeCityId" name="txtOfficeCityId" maxlength="50" placeholder="Office City Id" />
                                    </label>
                                </section>

                                <section>
                                    <label for="txtOfficePostalCode" class="label">Office Postal Code</label>
                                    <label class="input">
                                        <input type="text" id="txtOfficePostalCode" name="txtOfficePostalCode" maxlength="50" placeholder="Office Postal Code" />
                                    </label>
                                </section>
                                <section>
                                    <label for="txtOfficeDistrictId" class="label">Office District Id</label>
                                    <label class="input">
                                        <input type="text" id="txtOfficeDistrictId" name="txtOfficeDistrictId" maxlength="50" placeholder="Office District Id"/>
                                    </label>
                                </section>
                                <section>
                                    <label for="txtAddressTypeName" class="label">Address Type Name</label>
                                    <label class="input">
                                        <input type="text" id="txtAddressTypeName" name="txtAddressTypeName" maxlength="50" placeholder="Address Type Name"/>
                                    </label>
                                </section>
                                <section>
                                    <label class="checkbox">
                                        <input type="checkbox" name="chkIsActive" id="chkIsActive">
                                        <i></i>IsActive
