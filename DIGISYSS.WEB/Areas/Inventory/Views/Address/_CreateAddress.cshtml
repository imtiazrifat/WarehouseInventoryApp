                        </div>
                    </div>

                    <footer>
                        <div class="col-lg-12">
                            <button class="btn btn-primary" align="right" id="btnSaveAddress">
                                @*onclick="createAssetCategoryManager.SaveAssetCategory()"*@
                                Save
                            </button>
                            <button type="button" class="btn btn-warning" id="btnClearAddressForm">
                                Clear
                            </button>
                        </div>
                    </footer>
                </fieldset>

            </div>

        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->

</div>
