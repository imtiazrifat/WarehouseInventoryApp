                                </section>
                                <section>
                                    <label for="txtHomeDistrictId" class="label">Home District Id</label>
                                    <label class="input">
                                        <input type="text" id="txtHomeDistrictId" name="txtHomeDistrictId" maxlength="50" placeholder="Home District Id"/>
