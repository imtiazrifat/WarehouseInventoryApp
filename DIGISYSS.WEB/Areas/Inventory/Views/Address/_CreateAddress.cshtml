                                </section>
                                <section>
                                    <label for="txtHomeAddress2" class="label">Home Address 2</label>
                                    <label class="input">
                                        <input type="text" id="txtHomeAddress2" name="txtHomeAddress2" maxlength="350" placeholder="Home Address 2" />
