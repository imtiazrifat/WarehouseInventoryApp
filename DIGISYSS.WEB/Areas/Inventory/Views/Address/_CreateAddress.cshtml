                                </section>
                                <section>
                                    <label for="txtHomeCityId" class="label">Home City Id</label>
                                    <label class="input">
                                        <input type="text" id="txtHomeCityId" name="txtHomeCityId" maxlength="50" placeholder="Home City Id"/>
